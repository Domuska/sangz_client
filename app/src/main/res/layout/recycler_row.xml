<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">


    <TextView
        android:id="@+id/recycler_songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/recycler_voteCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"/>

    <Button
        android:id="@+id/recycler_upvotebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upvoteButtonText" />

    <Button
        android:id="@+id/recycler_downvotebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/downvoteButtonText" />

</LinearLayout>